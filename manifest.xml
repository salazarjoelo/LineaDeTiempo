<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="5.0" method="upgrade">
    <name>LineaDeTiempo</name>
    <version>1.0.0</version>
    <creationDate>2024-03</creationDate>
    <author>Joel Salazar</author>
    <authorEmail>salazarjoelo@gmail.com</authorEmail>
    <description>Componente de línea de tiempo interactiva</description>
    
    <scriptfile>script.php</scriptfile>
    
    <administration>
        <menu>Línea de Tiempo</menu>
        <files folder="administrator">
            <folder>controllers</folder>
            <folder>models</folder>
            <folder>views</folder>
        </files>
    </administration>
    
    <files folder="site">
        <folder>controllers</folder>
        <folder>models</folder>
        <folder>views</folder>
    </files>
    
    <media destination="com_lineadetiempo" folder="media">
        <folder>css</folder>
        <folder>js</folder>
    </media>
    
    <install>
        <sql>
            <file driver="mysql" charset="utf8">administrator/sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    
    <languages folder="administrator/language">
        <language tag="en-GB">en-GB/en-GB.com_lineadetiempo.ini</language>
        <language tag="es-ES">es-ES/es-ES.com_lineadetiempo.ini</language>
    </languages>
</extension>